<!DOCTYPE html>
<html>
<head>
    <title>Online User</title>
    <link rel='stylesheet' href='/stylesheets/style.css' />
    <script src="http://127.0.0.1:3000/socket.io/socket.io.js"></script>
    <script src="https://ajax.googleapis.com/ajax/libs/jquery/1.12.0/jquery.min.js"></script>
    <script language="JavaScript">
        function load_ajax(){
            $.ajax({
                url : '/users/onlineList',         //duong dan can goi den
                type: 'GET',                   //kieu cua request len server
                cache: false,
                data: {
                },
                success:                    //ham sau khi request thanh cong
                        function(result){
                            //alert("Gui thanh cong !");
                            if(result.length)
                            {
                                $('#result').html(result);
                            }
                        }
            });
        }
        $(document).ready(function() {
            setInterval(load_ajax,5000);
        })
    </script>
    <script src="/javascripts/connect.js"></script>
</head>
<body>
<h1>Hi!</h1>
<h2>This is a list of online user :</h2>
<div id="result">


</div>
<input type="button" name="clickme" id="refresh" onclick="load_ajax()" value="refresh" />
</body>
</html>
